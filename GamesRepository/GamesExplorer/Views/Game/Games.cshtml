@using System.Globalization
@model IEnumerable<GamesExplorer.Models.GameModel>
@{
    ViewBag.Title = "Games";
}




<h2>Games</h2>
<h3>Total: @Model.Count()  Cost: @Model.Sum(g=>g.Price).ToString("C")</h3>

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Buy Date</th>
        <th>Price (PLN)</th>
        <th>Activation Services</th>
        <th>Shop</th> 
        <th>Digital</th>
    </tr>
    </thead>
    <tbody>


    @for (int index = 0; index < @Model.ToList().Count; index++)
    {
        var m = @Model.ToList()[index];



        <tr>
            <td>@(index +1)</td>

            @if (!string.IsNullOrEmpty(@m.Dlc))
            {
                <td><b>DLC -  @m.Title</b></td>
            }
            else
            {
                <td>@m.Title</td>
            }

            
            <td>@m.BuyDate.ToString("dd-MM-yyyy", CultureInfo.InvariantCulture)</td>
            <td>@m.Price</td>
            <td>@m.ActivationServices</td>
            <td>@m.Shop</td>
            <td>@m.Digital</td>
          


        </tr>
    }
    </tbody>
</table>
